R2PM_BEGIN

R2PM_GIT "https://github.com/mrmacete/r2scripts"
R2PM_DESC "[RAsm] BPF disassembler, analyzer, emulator"

R2PM_INSTALL() {
	cd bpf
	make clean
	make
	# home installation
	EXT_SO=$(r2 -hh|grep LIBEXT|awk '{print $2}')
	cp *.${EXT_SO} ~/.config/radare2/plugins
}

R2PM_UNINSTALL() {
	rm -f ~/.config/radare2/plugins/*bpf*
}

R2PM_END
