R2PM_BEGIN

R2PM_GIT "https://github.com/VirusTotal/yara"
R2PM_DESC "[syspkg] yara library and commandline tools from git"

R2PM_INSTALL() {
	export CFLAGS=-I/usr/local/include
	sh bootstrap.sh
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	${MAKE} -j12 || exit 1
	if [ "${GLOBAL}" = 1 ]; then
		${SUDO} ${MAKE} install
	else
		${MAKE} install
	fi
}

R2PM_UNINSTALL() {
	if [ "${GLOBAL}" = 1 ]; then
		${SUDO} ${MAKE} uninstall
	else
		${MAKE} uninstall
	fi
}

R2PM_END
