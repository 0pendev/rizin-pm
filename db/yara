R2PM_BEGIN

R2PM_GIT "https://github.com/radare/radare2-extras"
R2PM_DESC "[syspkg] yara library and commandline tools from git"

R2PM_INSTALL() {
	export CFLAGS=-I/usr/local/include
	if [ "${GLOBAL}" = 1 ]; then
		yara/install-yara.sh
	else
		PREFIX="$R2PM_PREFIX" \
		NOSUDO=1 \
			yara/install-yara.sh
	fi
}

R2PM_UNINSTALL() {
	echo "Sorry. This package cannot be uninstalled"
	exit 0
}

R2PM_END
