R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-bindings"
R2PM_DESC "[lang-quickjs] QuickJS RLang plugin #!duktape"

R2PM_INSTALL() {
	cd libr/lang || exit 1
	${MAKE} clean || exit 1
	${MAKE} quickjs || exit 1
	${MAKE} qjs-install R2PM_PLUGDIR="${R2PM_PLUGDIR}" || exit 1
}

R2PM_UNINSTALL() {
	rm -f "${R2PM_PLUGDIR}/lang_quickjs"*
}

R2PM_END
