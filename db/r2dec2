R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/r2dec-js"
R2PM_DESC "[r2-plugin] r2dec core2 (do not use)"
BINDIR="${R2PM_BINDIR}"

R2PM_INSTALL() {
	cd ..
	rm -rf r2dec-js
	git clone --branch core2 https://github.com/radareorg/r2dec-js r2dec-js
	cd r2dec-js || exit 1
	make clean
	make || exit 1
	make install || exit 1
}

R2PM_UNINSTALL() {
	make uninstall || exit 1
}

R2PM_END
