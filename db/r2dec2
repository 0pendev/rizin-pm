R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/r2dec-js"
R2PM_DESC "[r2-plugin] Experimental Decompiler written in javascript on top of r2"
BINDIR="${R2PM_BINDIR}"

R2PM_INSTALL() {
	git checkout -b core2-local
	git reset --hard @~50
	git pull https://github.com/radareorg/r2dec-js core2
	make clean && make
	make || exit 1
	git checkout master
	git branch -d core2-local
}

R2PM_UNINSTALL() {
	make uninstall || exit 1
}

R2PM_END
